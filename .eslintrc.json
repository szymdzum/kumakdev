{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:astro/recommended"
  ],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"],
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "rules": {
        "astro/no-unused-css-selector": "off"
      }
    }
  ],
  "rules": {
    "no-unused-vars": "warn"
  }
}
