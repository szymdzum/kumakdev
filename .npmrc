# Use hardlinks instead of copies for improved performance
link-workspace-packages=true
shared-workspace-lockfile=true

# Use a faster compression algorithm for pnpm pack/publish
# (improves performance when working with large modules)
compression-level=0

# Ensure PNPM preserves optional peer dependencies
auto-install-peers=true

# Automatically fix peer dependency issues
strict-peer-dependencies=false

# Use legacy peer dependencies algorithm for better compatibility
legacy-peer-deps=false

# Use Yarn's node-linker to avoid disk space wastage
node-linker=hoisted
