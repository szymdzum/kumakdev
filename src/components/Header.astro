---
interface Props {
  siteTitle: string;
  siteDescription?: string;
}

const { siteTitle, siteDescription } = Astro.props;
---

<header>
  <div class="container">
    <div class="header-content">
      <a href="/" class="brand">
        <span class="brand-title">{siteTitle}</span>
        {siteDescription && <span class="brand-description">{siteDescription}</span>}
      </a>

      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/test">Test</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 1rem 0;
    border-bottom: 1px solid;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .brand {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    color: inherit;
  }

  .brand-title {
    font-weight: 700;
    font-size: 1.25rem;
    color: inherit;
  }

  .brand-description {
    font-size: 0.875rem;
    opacity: 0.7;
    color: inherit;
  }

  nav ul {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  nav a {
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: opacity 0.2s ease;
    color: inherit;
  }

  nav a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
    }

    nav ul {
      gap: 1rem;
    }
  }
</style>
