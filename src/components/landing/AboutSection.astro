---
interface Props {
  about: {
    sectionTitle: string;
    profileImage: string;
    imageAlt: string;
    paragraphs: string[];
    moreButton: string;
  };
}

const { about } = Astro.props;
---

<!-- About Section -->
<section id="about" class="about-section">
  <div class="container">
    <h2 class="section-title">{about.sectionTitle}</h2>

    <div class="about-content">
      <div class="profile-image reveal-item">
        <img src={about.profileImage} alt={about.imageAlt} />
      </div>

      <div class="about-text">
        {
          about.paragraphs.map((paragraph, index) => (
            <p
              class:list={[
                "reveal-item",
                index === 0 ? "reveal-delay-1" : index === 1 ? "reveal-delay-2" : "reveal-delay-3",
              ]}
            >
              {paragraph}
            </p>
          ))
        }

        <div class="about-button-container reveal-item reveal-delay-4">
          <a href="/about" class="outline-button">{about.moreButton}</a>
        </div>
      </div>
    </div>
  </div>
</section>
