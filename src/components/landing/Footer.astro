---
interface Props {
	footer: {
		logo: string;
		tagline: string;
		socialAriaLabels: {
			twitter: string;
			github: string;
		};
		// eslint-disable-next-line no-unused-vars
		copyright: (year: number) => string;
		links: {
			privacy: string;
			terms: string;
		};
	};
}

const { footer } = Astro.props;
---

<!-- Footer -->
<footer class="footer">
  <div class="container">
    <div class="footer-main">
      <div class="footer-brand">
        <a href="/" class="footer-logo">{footer.logo}</a>
        <p class="footer-tagline">{footer.tagline}</p>
      </div>
      <div class="social-links">
        <a href="https://twitter.com" class="social-link" aria-label={footer.socialAriaLabels.twitter}>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
          </svg>
        </a>
        <a href="https://github.com" class="social-link" aria-label={footer.socialAriaLabels.github}>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
            <path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
        </a>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">{footer.copyright(new Date().getFullYear())}</p>

      <nav class="footer-nav">
        <a href="/privacy" class="footer-nav-link">{footer.links.privacy}</a>
        <a href="/terms" class="footer-nav-link">{footer.links.terms}</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: rgb(17, 24, 39); /* gray-900 */
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 3rem 1rem;
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-logo {
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    color: white;
    letter-spacing: -0.025em;
  }

  .footer-tagline {
    color: rgb(156, 163, 175); /* gray-400 */
    font-size: 0.875rem;
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 9999px;
    color: rgb(209, 213, 219); /* gray-300 */
    transition: background-color 0.2s, color 0.2s;
  }

  .social-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1.5rem;
  }

  .copyright {
    font-size: 0.875rem;
    color: rgb(156, 163, 175); /* gray-400 */
    margin: 0;
  }

  .footer-nav {
    display: flex;
    gap: 1.5rem;
  }

  .footer-nav-link {
    font-size: 0.875rem;
    color: rgb(156, 163, 175); /* gray-400 */
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-nav-link:hover {
    color: white;
  }

  /* Responsive styles */
  @media (max-width: 640px) {
    .footer-main {
      flex-direction: column;
      gap: 1.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .footer-nav {
      margin-top: 0.5rem;
    }
  }
</style>
