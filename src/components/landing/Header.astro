---
import MobileNav from "../MobileNav.astro";

interface Props {
	navigation: {
		logo: string;
		links: {
			blog: string;
			projects: string;
			about: string;
			contact: string;
		};
		resume: string;
	};
}

const { navigation } = Astro.props;
---

<!-- Header -->
<header class="header">
  <div class="header-container container">
    <a href="/" class="logo">{navigation.logo}</a>
    <nav class="desktop-nav">
      <a href="#blog" class="nav-link">{navigation.links.blog}</a>
      <a href="#projects" class="nav-link">{navigation.links.projects}</a>
      <a href="#about" class="nav-link">{navigation.links.about}</a>
      <a href="#contact" class="nav-link">{navigation.links.contact}</a>
    </nav>
    <a href="/resume" class="resume-button desktop-only">{navigation.resume}</a>
    <MobileNav />
  </div>
</header>
