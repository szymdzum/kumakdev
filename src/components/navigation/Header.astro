---
import type { Language } from '../../lib/content';
import { getSiteContent } from '../../lib/content';
import MobileNav from './MobileNav.astro';

interface Props {
  language?: Language;
}

const { language = 'en' } = Astro.props;
const content = getSiteContent(language);
---

<header transition:persist>
  <div class="container">
    <div class="nav-wrapper">
      <a href="/" class="brand">
        {content.navigation.logo}
      </a>

      <nav class="nav" aria-label="Main navigation">
        <div class="nav-links">
          <a href="#blog" class="nav-link">{content.navigation.links.blog}</a>
          <a href="#projects" class="nav-link">{content.navigation.links.projects}</a>
          <a href="#about" class="nav-link">{content.navigation.links.about}</a>
          <a href="#contact" class="nav-link">{content.navigation.links.contact}</a>
        </div>

        <div class="nav-actions">
          <a href="/resume" class="resume-button">{content.navigation.resume}</a>

          <div class="social-links" aria-label="Social links">
            <a
              href="https://twitter.com"
              class="social-link"
              aria-label={content.footer.socialAriaLabels.twitter}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                ></path>
              </svg>
            </a>
            <a
              href="https://github.com"
              class="social-link"
              aria-label={content.footer.socialAriaLabels.github}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                ></path>
                <path d="M9 18c-4.51 2-5-2-7-2"></path>
              </svg>
            </a>
          </div>
        </div>
      </nav>
    </div>
  </div>
  <MobileNav />
</header>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .nav-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .brand {
    font-size: 1.5rem;
    font-weight: 600;
    text-decoration: none;
    color: inherit;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links {
    display: none;
    gap: 1.5rem;
  }

  .nav-link {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover,
  .nav-link:focus-visible {
    color: var(--accent-color, #3b82f6);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .resume-button {
    display: none;
    padding: 0.5rem 1rem;
    border: 2px solid currentColor;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .resume-button:hover,
  .resume-button:focus-visible {
    background-color: currentColor;
    color: white;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    color: inherit;
    transition: color 0.2s ease;
  }

  .social-link:hover,
  .social-link:focus-visible {
    color: var(--accent-color, #3b82f6);
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .nav-links {
      display: flex;
    }

    .resume-button {
      display: inline-block;
    }
  }
</style>
