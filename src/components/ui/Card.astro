---
interface Props {
  title: string;
  description: string;
  link: string;
  imageUrl?: string;
  date?: string;
  readTime?: string;
  tags?: string[];
  price?: string;
  buttonText?: string;
}

const {
  title,
  description,
  link,
  imageUrl,
  date,
  readTime,
  tags,
  price,
  buttonText = "View details",
} = Astro.props;
---

<article class="box card">
  <div class="stack">
    {
      imageUrl && (
        <figure>
          <div class="frame ratio-16:9">
            <img src={imageUrl} alt={`${title}`} loading="lazy" />
          </div>
          <figcaption class="sr-only">{title}</figcaption>
        </figure>
      )
    }

    <header>
      {
        date && readTime && (
          <div class="cluster" aria-label="Publication info">
            <time datetime={date}>{date}</time>
            <span aria-hidden="true">â€¢</span>
            <span>{readTime} read</span>
          </div>
        )
      }
      <h3 id={`card-heading-${title.replace(/\s+/g, "-").toLowerCase()}`}>{title}</h3>
    </header>

    <p>{description}</p>

    <footer>
      {
        tags && tags.length > 0 && (
          <ul class="cluster tags" aria-label={`Tags for ${title}`}>
            {tags.map((tag) => (
              <li>
                <span class="tag">{tag}</span>
              </li>
            ))}
          </ul>
        )
      }

      {
        price && (
          <p class="price" aria-label="Price">
            {price}
          </p>
        )
      }

      <a href={link} class="with-icon card-link" aria-label={`${buttonText} for ${title}`}>
        {buttonText}
      </a>
    </footer>
  </div>
</article>

<style>
  .card {
    background-color: var(--color-dark);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition:
      transform 0.2s ease,
      border-color 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    border-color: var(--color-primary);
  }

  .card-content {
    padding: var(--space-md);
  }

  .card-title {
    color: var(--color-light);
    margin-bottom: var(--space-xs);
    font-size: var(--font-size-xl);
  }

  .card-description {
    color: var(--color-muted);
    margin-bottom: var(--space-sm);
  }

  .ratio-16:9 {
    --n: 16;
    --d: 9;
  }

  h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.25;
  }

  p {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .price {
    font-weight: 600;
  }

  footer {
    margin-top: auto;
    display: flex;
    flex-direction: column;
    gap: var(--s1);
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    font-weight: 500;
    color: var(--color-primary);
    transition: color 0.2s ease;
  }

  .card-link:hover {
    color: var(--color-primary-dark);
  }

  .card-link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .tags {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-light);
    border-radius: 9999px;
    font-size: 0.75rem;
    color: var(--color-muted);
  }
</style>
