---
import { getCollection } from "astro:content";
import MainFooter from "../../components/MainFooter.astro";
import MainNavigation from "../../components/MainNavigation.astro";
import RootLayout from "../../layouts/RootLayout.astro";

// Get all blog posts that aren't drafts and sort them by date
const blogPosts = await getCollection("blog", ({ data }) => {
  return !data.draft;
});

// Sort by date (newest first)
const sortedPosts = blogPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<RootLayout
  title="Blog | MinimalBlog"
  description="Articles on design, development, and user experience"
>
  <div class="min-h-screen bg-gray-950 text-gray-100">
    <MainNavigation currentPath="/blog" />

    <main class="container mx-auto px-4 py-12">
      <div class="mx-auto max-w-4xl">
        <!-- Page Title -->
        <div class="mb-12 text-center">
          <h1 class="mb-4 text-4xl font-bold tracking-tight">Blog</h1>
          <p class="mx-auto max-w-2xl text-gray-400">
            Thoughts, articles, and insights on design, development, and creating meaningful digital
            experiences.
          </p>
        </div>

        <!-- Blog List -->
        <div class="grid gap-8 md:grid-cols-2">
          {
            sortedPosts.map((post) => (
              <a href={`/blog/${post.slug}`} class="group">
                <div class="space-y-4 rounded-lg border border-gray-800 p-6 transition-colors hover:bg-gray-900">
                  <div class="flex items-center gap-2 text-sm text-emerald-500">
                    <span>{post.data.category}</span>
                    <span>â€¢</span>
                    <span class="text-gray-400">{post.data.readTime}</span>
                  </div>

                  <h2 class="text-xl leading-tight font-bold transition-colors group-hover:text-emerald-500">
                    {post.data.title}
                  </h2>

                  <p class="line-clamp-2 text-gray-400">{post.data.description}</p>

                  <div class="flex items-center gap-3">
                    <div class="h-8 w-8 overflow-hidden rounded-full border border-gray-700">
                      <img
                        src={post.data.author.image}
                        alt={post.data.author.name}
                        class="h-full w-full object-cover"
                      />
                    </div>
                    <div class="text-sm">
                      <div class="font-medium">{post.data.author.name}</div>
                      <div class="text-gray-500">
                        {new Date(post.data.publishDate).toLocaleDateString("en-US", {
                          year: "numeric",
                          month: "long",
                          day: "numeric",
                        })}
                      </div>
                    </div>
                  </div>

                  {post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="rounded-full bg-gray-800 px-2.5 py-0.5 text-xs text-gray-300">
                          #{tag}
                        </span>
                      ))}
                      {post.data.tags.length > 3 && (
                        <span class="rounded-full bg-gray-800 px-2.5 py-0.5 text-xs text-gray-300">
                          +{post.data.tags.length - 3} more
                        </span>
                      )}
                    </div>
                  )}
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </main>

    <MainFooter />
  </div>
</RootLayout>
